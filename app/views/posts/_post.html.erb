<article class="post">
	<section class="post-head">
		<h2><h2><%= link_to post.title, post_path(post) %></h2></h2>
		<small>
			<time>
				<%= post.created_at.to_date.strftime("%d %B, %Y") %>
			</time>
			<br>
			<% if post.category.present? %>
				<%= link_to post.category.name, post.category %>
			<% end %>
		</small>
	</section>
	<section class="post-summary clearfix">
		<%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %>
		<%= post.summary %>
	</section>
</article>
	
